# summon them particles
execute as @a[tag=!spectator, scores={particle_purple_ring=1}] at @s run particle brr:purple_player_ring ~ ~ ~
execute as @a[tag=!spectator, scores={particle_blue_flame=1}] at @s run particle brr:blue_floor ~ ~ ~
execute as @a[tag=!spectator, scores={particle_green_sphere=1}] at @s run particle brr:green_circle ~ ~ ~
execute as @a[tag=!spectator, scores={particle_red_trail=1}] at @s run particle brr:red_trail ~ ~ ~
execute as @a[tag=!spectator, scores={particle_fire_ring=1}] at @s run particle brr:power_up_player ~ ~ ~
